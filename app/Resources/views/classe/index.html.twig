{% extends 'layout.html.twig' %}

{% block body %}
<div id="panel-content">
    <div class="tab-content">
        <div class="tab-pane fade active in" id="accueilpanel" role="tabpanel" aria-labelledby="nav-contact-tab">
            <h1>Liste des classes </h1>
            <table>
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for classe in classes %}
                    <tr>
                        <td>{{ classe.libelle }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('classe_show', { 'id': classe.id }) }}">Afficher</a>
                                </li>
                                <li>
                                    <a href="{{ path('classe_edit', { 'id': classe.id }) }}">Editer</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button>
                <a href="{{ path('classe_new') }}">Ajouter une nouvelle classe</a>
            </button>
        </div>
    </div>
</div>
{% endblock %}
