{% extends '::layout.html.twig' %}

{% block body %}

<div id="panel-content">
    <div class="tab-content">
        <div class="tab-pane fade active in" id="accueilpanel" role="tabpanel" aria-labelledby="nav-contact-tab">
            <h1>Pays</h1>
            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ pays.id }}</td>
                    </tr>
                    <tr>
                        <th>Libelle</th>
                        <td>{{ pays.libelle }}</td>
                    </tr>
                </tbody>
            </table>
            <div>
                <ul>
                    <li>
                        <button>
                            <a href="{{ path('pays_index') }}">Retour a la liste</a>
                        </button>
                    </li>
                    <li>
                        <button>
                            <a href="{{ path('pays_edit', { 'id': pays.id }) }}">Modifier le Pays</a>
                        </button>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Suppression">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
