{% extends '::layout.html.twig' %}

{% block body %}

<div id="panel-content">
    <div class="tab-content">
        <div class="tab-pane fade active in" id="accueilpanel" role="tabpanel" aria-labelledby="nav-contact-tab">
            <h1>Liste des pays</h1>
            <table>
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for pays in pays %}
                    <tr>
                        <td>{{ pays.libelle }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('pays_show', { 'id': pays.id }) }}">afficher</a>
                                </li>
                                <li>
                                    <a href="{{ path('pays_edit', { 'id': pays.id }) }}">changer</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

<button>
                    <a href="{{ path('pays_new') }}">Ajoute un nouveau pays</a>
</button>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
